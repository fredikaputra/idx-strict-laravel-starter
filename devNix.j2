{%- if not sail %}{ pkgs }: {
  channel = "stable-25.05";
  packages = [
    pkgs.php84
    pkgs.php84.packages.composer
  ];
  {%- endif %}
  {%- if sail %}{}: {
  services.docker.enable = true;
  {%- endif %}
  idx = {
    extensions = [
      "laravel.vscode-laravel"
      "bmewburn.vscode-intelephense-client"
    ];
    {%- if not sail %}
    previews = {
      enable = true;
      previews = {
        web = {
          command = [ "php" "artisan" "serve" "--port" "$PORT" "--host" "0.0.0.0" ];
          manager = "web";
        };
      };
    };
    {%- endif %}
    {%- if sail %}
    workspace = {
      onCreate = {
        setup = "./vendor/onCreate.sh";
      };
      onStart = {
        sail = ''
          ./vendor/bin/sail down -v
          docker image rm mysql/mysql-server
          ./vendor/bin/sail up -d
          docker exec -it {{ PROJECT_NAME }}-laravel.test-1 bash -c "sleep 20 && chown -R sail storage && php artisan migrate:fresh --seed"
        '';
      };
    };
    {%- endif %}
  };
}
